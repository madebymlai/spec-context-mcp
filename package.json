{
  "name": "spec-context-mcp",
  "version": "0.1.0",
  "description": "Unified MCP server for semantic code search and spec-driven development",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "spec-context-mcp": "./dist/index.js",
    "spec-context-dashboard": "./dist/dashboard/multi-server.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
