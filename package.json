    "@langchain/textsplitters": "^1.0.1",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@qdrant/js-client-rest": "^1.12.0",
    "@toon-format/toon": "^2.1.0",
    "chokidar": "^5.0.0",
    "diff": "^8.0.3",
    "dotenv": "^16.0.0",
    "fastify": "^4.28.1",
    "glob": "^11.0.0",
    "ignore": "^6.0.0",
    "langchain": "^1.2.10",
    "open": "^10.1.0",
