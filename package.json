{
  "name": "spec-context-mcp",
  "version": "0.1.0",
  "description": "Unified MCP server for semantic code search and spec-driven development",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "spec-context-mcp": "./dist/index.js",
    "spec-context-dashboard": "./dist/dashboard/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc && npm run build:dashboard && npm run copy-static",
    "build:server": "tsc",
    "build:dashboard": "vite build --config src/dashboard_frontend/vite.config.ts",
    "dev:dashboard": "vite --config src/dashboard_frontend/vite.config.ts",
    "copy-static": "node scripts/copy-static.cjs",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "dashboard": "node dist/dashboard/cli.js",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "claude",
    "code-search",
    "embeddings",
    "qdrant"
  ],
  "author": "madebymlai",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^10.0.1",
    "@heroicons/react": "^2.2.0",
    "@langchain/core": "^1.1.15",
    "@langchain/textsplitters": "^1.0.1",
    "@mdxeditor/editor": "^3.50.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@qdrant/js-client-rest": "^1.12.0",
    "@tailwindcss/vite": "^4.1.13",
    "@toon-format/toon": "^2.1.0",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff": "^8.0.3",
    "dotenv": "^16.0.0",
    "fastify": "^4.28.1",
    "glob": "^11.0.0",
    "highlight.js": "^11.9.0",
    "howler": "^2.2.4",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "ignore": "^6.0.0",
    "langchain": "^1.2.10",
    "markdown-it": "^14.1.0",
    "mermaid": "^10.9.1",
    "node-cron": "^3.0.3",
    "open": "^10.1.0",
    "openai": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.7.3",
    "react-router-dom": "^6.26.2",
    "simple-git": "^3.30.0",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/diff": "^7.0.2",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.3.0",
    "vite": "^7.2.7",
    "vitest": "^1.0.0"
  }
}
