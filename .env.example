# ==========================================================================
# Core Setup
# ==========================================================================

# Embeddings
EMBEDDING_PROVIDER=voyageai
EMBEDDING_API_KEY=
# Optional: leave empty to use provider default
EMBEDDING_MODEL=
EMBEDDING_RERANK_MODEL=rerank-2

# ChunkHound deep research (OpenRouter only)
OPENROUTER_API_KEY=
CHUNKHOUND_LLM_MODEL=google/gemini-2.5-flash

# Discipline mode: full | standard | minimal
SPEC_CONTEXT_DISCIPLINE=full

# Dispatch roles
# Use built-in providers: claude | codex | gemini | opencode
# SPEC_CONTEXT_IMPLEMENTER=claude
# SPEC_CONTEXT_REVIEWER=codex

# Optional model tiering by complexity
# SPEC_CONTEXT_IMPLEMENTER_MODEL_SIMPLE=
# SPEC_CONTEXT_IMPLEMENTER_MODEL_COMPLEX=
# SPEC_CONTEXT_REVIEWER_MODEL_SIMPLE=
# SPEC_CONTEXT_REVIEWER_MODEL_COMPLEX=
# SPEC_CONTEXT_IMPLEMENTER_REASONING_EFFORT=medium
# SPEC_CONTEXT_REVIEWER_REASONING_EFFORT=high

# Dashboard
DASHBOARD_URL=http://localhost:3000

# ==========================================================================
# Optional
# ==========================================================================

SPEC_CONTEXT_DISABLE_VERSION_CHECK=false

